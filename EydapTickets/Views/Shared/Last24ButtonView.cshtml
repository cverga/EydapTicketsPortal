


<script type="text/javascript">
    function filter(e)
    {
        var now = new Date();
        now.setDate(now.getDate() - e);
        debugger;

        var date = now.toDateString("el-GR");
        var filterCondition = "[DateCreated] >= '" + date + "'";
        //var filterCondition = "";
        IncidentGridView.ApplyFilter(filterCondition);
    }
</script>


