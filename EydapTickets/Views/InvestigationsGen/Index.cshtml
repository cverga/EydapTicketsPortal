@model IEnumerable<DM.App.Library.Models.Investigations>
@using DM.App.Library.Core

@{
    ViewBag.PageTitle = "Investigations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.PageTitle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<p>
    @Html.ActionLink("Create New", "Create", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request))
</p>
<table class="table table-striped table-bordered table-hover dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvestigationsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FakelosId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fakelos_Municipality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fakelos_Perioxi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fakelos_Odos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fakelos_Arithmos)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvestigationsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FakelosId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakelos_Municipality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakelos_Perioxi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakelos_Odos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakelos_Arithmos)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request, item.InvestigationsId)) <br />
                @Html.ActionLink("Details", "Details", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request, item.InvestigationsId))
                @*@Html.ActionLink("Edit", "Edit", new { id=item.UniqueId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UniqueId })*@
                @*@Html.ActionLink("Delete", "Delete", new { id=item.RowId })*@
            </td>
        </tr>
    }

</table>
