@model DM.App.Library.Models.Investigations
@using DM.App.Library.Core

@{
    ViewBag.PageTitle = ViewBag.PageTitle = "Φάκελος: " + Model.FakelosId; // "Προβολή";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.PageTitle</h1>
