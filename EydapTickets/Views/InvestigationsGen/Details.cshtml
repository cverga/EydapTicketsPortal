    if (UILibSelector.GetUILibrary(this.Request).Library == UILibSelector.UILibs.Bootstrap)
    {
        @Html.Partial("~/Views/InvestigationsGen/_EntityBtSp.cshtml", Model)
    }
    else
    {
        @Html.Partial("~/Views/InvestigationsGen/_Entity.cshtml", Model)
    }
}
