@model IEnumerable<DM.App.Library.Models.Tasks>
@using DM.App.Library.Core

@{
    ViewBag.PageTitle = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.PageTitle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<p>
    @Html.ActionLink("Create New", "Create", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request))
</p>
<table class="table table-striped table-bordered table-hover dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Task_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskTypeId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Task_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskTypeId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request, item.Task_Id)) <br />
                @Html.ActionLink("Details", "Details", HtmlTagsHelper.BuildQueryStringRouteValues(this.Request, item.Task_Id))
                @*@Html.ActionLink("Edit", "Edit", new { id=item.UniqueId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UniqueId })*@
                @*@Html.ActionLink("Delete", "Delete", new { id=item.RowId })*@
            </td>
        </tr>
    }

</table>
