
@model EydapTickets.Models.StatisticsCreteriaModel

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "SectorsStatistics";
        settings.Width = Unit.Percentage(100);
        settings.SelectedIndex = 0;
        settings.CallbackRouteValues = new { Controller = "Statistics", Action = "Sectors" };
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.Properties.ValidationSettings.RequiredField.IsRequired = true;
        settings.Properties.ValidationSettings.EnableCustomValidation = true;
        settings.Properties.ValidationSettings.ValidationGroup = "statisticspanel";
        settings.Properties.ValueType = typeof(string);

        settings.Properties.TextField = "Text";
        settings.Properties.ValueField = "Value";

        //settings.Properties.ClientSideEvents.ValueChanged = "function( s, e ){ FillStreetNames(s.GetText()); }";
        //settings.Properties.ClientSideEvents.SelectedIndexChanged = "function( s, e ){ FillStreetNames(s.GetText()); }";

        settings.Properties.CallbackPageSize = 100;
        }
    ).BindList(Model.Sectors).Bind(Model.SectorsStatistics).GetHtml()
